<Window x:Name="FolderDialog1" x:Class="MovieList.FolderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Closing="Window_Closing"
        Title="Add or Remove Folders" Height="423" Width="389">
    <Grid>
        <TextBox x:Name="FolderToAddTextBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" FontSize="10"/>
        <Button x:Name="AddFolderButton" Content="Add Folder" HorizontalAlignment="Left" Margin="296,10,0,0" VerticalAlignment="Top" Width="75" Click="AddFolderButton_Click"/>
        <ListBox x:Name="FolderListBox" HorizontalAlignment="Left" Height="315" Margin="10,38,0,0" VerticalAlignment="Top" Width="361"/>
        <Button x:Name="BrowseButton" Content="Browse..." HorizontalAlignment="Left" Margin="216,10,0,0" VerticalAlignment="Top" Width="75" Click="BrowseButton_Click"/>
        <Button x:Name="RemoveFolderButton" Content="Remove Selection" HorizontalAlignment="Left" Margin="260,361,0,0" VerticalAlignment="Top" Width="111" Click="RemoveFolderButton_Click" Height="21"/>
    </Grid>
</Window>
