<Window x:Name="FolderDialog1" x:Class="MovieList.FolderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Closing="Window_Closing"
        Title="Add or Remove Folders" Height="423" Width="389">
    <Grid>
        <TextBox x:Name="FolderToAddTextBox" Height="23" Margin="10,10,170,0" TextWrapping="Wrap" VerticalAlignment="Top" TabIndex="0"/>
        <Button x:Name="AddFolderButton" Content="Add Folder" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="75" Click="AddFolderButton_Click" TabIndex="2"/>
        <ListBox x:Name="FolderListBox" Margin="10,38,10,36" TabIndex="3"/>
        <Button x:Name="BrowseButton" Content="Browse..." HorizontalAlignment="Right" Margin="0,10,90,0" VerticalAlignment="Top" Width="75" Click="BrowseButton_Click" TabIndex="1"/>
        <Button x:Name="RemoveFolderButton" Content="Remove Selection" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="111" Click="RemoveFolderButton_Click" Height="21" TabIndex="4"/>
    </Grid>
</Window>
