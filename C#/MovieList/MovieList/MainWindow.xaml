<Window x:Class="MovieList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MovieList" Height="575" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="452*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.ColumnSpan="2">
            <StackPanel>
                <Menu DockPanel.Dock="Top">
                    <MenuItem Header="_File">
                        <MenuItem x:Name="ExitMenuItem" Header="_Exit" Click="ExitMenuItem_Click"/>
                    </MenuItem>
                    <MenuItem Header="_Edit">
                        <MenuItem x:Name="ChangeFolderMenuItem" Header="_Change Folders" Click="ChangeFolderMenuItem_Click"/>
                    </MenuItem>
                </Menu>
            </StackPanel>
        </DockPanel>


        <ListBox x:Name="MainListBox" MouseDoubleClick="MainListBox_MouseDoubleClick" KeyDown="MainListBox_KeyDown" HorizontalAlignment="Left" Height="343" Margin="10,56,0,0" VerticalAlignment="Top" Width="497" Grid.ColumnSpan="2" SelectionChanged="MainListBox_SelectionChanged"/>
        <TextBox x:Name="SearchBox" TextChanged="SearchBox_TextChanged" HorizontalAlignment="Left" Height="23" Margin="10,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="497" Grid.ColumnSpan="2"/>
        <Label x:Name="NameLabel" Content="Name:" HorizontalAlignment="Left" Margin="10,404,0,0" VerticalAlignment="Top" Width="55"/>
        <Label x:Name="PathLabel" Content="Path:" HorizontalAlignment="Left" Margin="10,435,0,0" VerticalAlignment="Top" Width="55"/>
        <Label x:Name="SizeLabel" Content="Size:" HorizontalAlignment="Left" Margin="10,466,0,0" VerticalAlignment="Top" Width="55"/>
        <TextBox x:Name="NameBox" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="0,408,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="442" IsReadOnly="True"/>
        <TextBox x:Name="PathBox" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="0,439,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="442" IsReadOnly="True"/>
        <TextBox x:Name="SizeBox" Grid.Column="1" HorizontalAlignment="Left" Height="22" Margin="0,470,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="442" IsReadOnly="True"/>
        <Label x:Name="NumMoviesLabel" Content="" Grid.Column="1" HorizontalAlignment="Left" Margin="195,508,0,0" VerticalAlignment="Top" Width="247"/>

    </Grid>
</Window>
